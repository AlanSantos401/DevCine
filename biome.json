{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"formatter": {
	  "enabled": true,
	  "indentStyle": "space",
	  "indentWidth": 2,
	  "lineWidth": 100,
	  "trailingComma": "all",
	  "semicolons": "always"
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"style": {
		  "organizeImports": {
			"enabled": true
		  }
		}
	  }
	},
	"files": {
	  "ignore": ["dist", "node_modules"]
	}
  }
  